def compute_sums_and_difference(n, m, arr):
    num1 = 0
    num2 = 0
    for num in arr:
        if num % m != 0:
            num2 += num
        else:
            num1 += num
    return num1 - num2
n,m = map(int,input().split())
arr = list(map(int,input().split()))
print(compute_sums_and_difference(n, m, arr))
